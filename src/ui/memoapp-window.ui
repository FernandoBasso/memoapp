  <template class="MemoAppWindow" parent="GtkApplicationWindow">
    <property name="title" translatable="yes">Î» MemoApp Î»</property>
    <property name="default-width">1280</property>
    <property name="default-height">720</property>
    <child>
      <object class="GtkBox" id="content_box">
        <property name="visible">True</property>
        <property name="orientation">vertical</property>
        <child>
          <object class="GtkPaned" id="outer_pane">
            <property name="visible">True</property>
            <property name="expand">True</property>
            <property name="wide-handle">True</property>
            <child>

              <object class="GtkBox">
                <property name="visible">True</property>
                <property name="width-request">240</property>

                <!-- Doc Tree View -->
                <child>
                  <object class="GtkScrolledWindow">
                    <property name="visible">True</property>
                    <property name="expand">True</property>
                    <child>
                      <object class="GtkTextView">
                        <property name="visible">True</property>
                        <property name="buffer">tb_docs_tree</property>
                      </object>
                    </child>
                  </object>
                </child>

              </object>
            </child>

            <child>
              <object class="GtkBox">
                <property name="visible">True</property>
                <property name="expand">True</property>

                <child>
                  <object class="GtkPaned" id="inner_pane">
                    <property name="visible">True</property>
                    <property name="expand">True</property>
                    <property name="wide-handle">True</property>

                    <!-- Main View, the document to edit -->
                    <child>
                      <object class="GtkBox">
                        <property name="visible">True</property>
                        <property name="expand">True</property>

                        <child>
                          <object class="GtkScrolledWindow">
                            <property name="visible">True</property>
                            <property name="expand">True</property>
                            <child>
                              <object class="GtkTextView">
                                <property name="visible">True</property>
                                <property name="buffer">tb_doc_edit</property>
                                <property name="wrap-mode">GTK_WRAP_WORD</property>
                              </object>
                            </child>
                          </object>
                        </child>
                      </object>
                      <packing>
                        <property name="resize">True</property>
                        <property name="shrink">False</property>
                      </packing>
                    </child>

                    <!-- The document info tree, headings, tags, etc. -->
                    <child>
                      <object class="GtkBox">
                        <property name="visible">True</property>
                        <property name="expand">False</property>
                        <property name="width-request">260</property>
                        <child>
                          <object class="GtkScrolledWindow">
                            <property name="visible">True</property>
                            <property name="expand">True</property>
                            <child>
                              <object class="GtkTextView">
                                <property name="visible">True</property>
                                <property name="buffer">tb_doc_info</property>
                                <property name="wrap-mode">GTK_WRAP_WORD</property>
                              </object>
                            </child>
                          </object>
                        </child>

                      </object>
                      <packing>
                        <property name="resize">False</property>
                        <property name="shrink">True</property>
                      </packing>
                    </child>

                  </object>
                </child>

              </object>

            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
